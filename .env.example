# Environment Variables Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/quantumworks
# For SQLite (development only):
# DATABASE_URL=sqlite:///./sql_app.db

# ============================================
# SECURITY - CRITICAL!
# ============================================

# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_SECRET_KEY

# Admin credentials (CHANGE THESE!)
ADMIN_EMAIL=admin@yourcompany.com
ADMIN_PASSWORD=CHANGE_THIS_TO_A_STRONG_PASSWORD

# Optional: Secret for admin initialization endpoint
ADMIN_INIT_SECRET=CHANGE_THIS_TO_ANOTHER_SECRET

# ============================================
# AI / GEMINI
# ============================================
GEMINI_API_KEY=AIzaSyBb-w3Bs71vGQCQfLzHSOOl-p8pMs7L-8g

# ============================================
# CORS
# ============================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://yourdomain.com

# ============================================
# REDIS (Optional - for distributed rate limiting)
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# EMAIL (For alerts and notifications)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourcompany.com

# Alert recipients (comma-separated)
ALERT_EMAILS=security@yourcompany.com,admin@yourcompany.com

# ============================================
# MONITORING
# ============================================
# Sentry for error tracking
SENTRY_DSN=your_sentry_dsn_here

# Environment
ENVIRONMENT=development
# Options: development, staging, production

# ============================================
# RATE LIMITING
# ============================================
# Override default rate limits (optional)
RATE_LIMIT_LOGIN_MAX=5
RATE_LIMIT_LOGIN_WINDOW=300
RATE_LIMIT_AI_MAX=10
RATE_LIMIT_AI_WINDOW=3600

# ============================================
# SECURITY SETTINGS
# ============================================
# Session timeout in minutes
SESSION_TIMEOUT=30

# Maximum failed login attempts before account lock
MAX_FAILED_LOGINS=5

# Account lock duration in minutes
ACCOUNT_LOCK_DURATION=30

# ============================================
# CDN (Optional)
# ============================================
CDN_URL=https://cdn.yourcompany.com

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_AI_FEATURES=true
ENABLE_WEBSOCKET=true
ENABLE_RATE_LIMITING=true
ENABLE_SECURITY_MONITORING=true

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Log file path
LOG_FILE=logs/app.log

# ============================================
# DEVELOPMENT ONLY
# ============================================
# Set to true to enable debug mode (NEVER in production!)
DEBUG=false

# Auto-reload on code changes
AUTO_RELOAD=true
